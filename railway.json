{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "ui": {
      "name": "ui",
      "source": "services/ui",
      "dockerfilePath": "services/ui/Dockerfile",
      "env": {
        "PORT": "8501",
        "REDIS_URL": "${{ Redis.REDIS_URL }}"
      }
    },
    "api": {
      "name": "api",
      "source": "services/api",
      "dockerfilePath": "services/api/Dockerfile",
      "env": {
        "PORT": "8000",
        "REDIS_URL": "${{ Redis.REDIS_URL }}"
      }
    },
    "worker": {
      "name": "worker",
      "source": "services/worker",
      "dockerfilePath": "services/worker/Dockerfile",
      "env": {
        "REDIS_URL": "${{ Redis.REDIS_URL }}"
      }
    }
  }
}
